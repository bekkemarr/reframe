<%- include('partials/header') -%>
<main class="bg-base-200">
  <% if (locals.messages.errors) { %> <% messages.errors.forEach( el => { %>
    <div class="alert alert-warning shadow-lg mt-2 w-1/4 mx-auto">
      <div>
        <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current flex-shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" /></svg>
        <span>Warning: <%= el.msg %></span>
      </div>
    </div>
    <% }) %> <% } %> <% if (locals.messages.info) { %> <%
    messages.info.forEach( el => { %>
    <div class="alert shadow-lg mt-2 w-1/4 mx-auto">
      <div>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-info flex-shrink-0 w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
        <span><%= el.msg %></span>
      </div>
    </div>
    <% }) %> <% } %>
  <div class="hero min-h-screen">
    <div class="hero-content flex-col lg:flex-row-reverse">
      <div class="text-center lg:text-left">
        <h1 class="text-5xl font-bold">Login now!</h1>
        <p class="py-6">The social media app that supports recovering fatalists. Get started with a group of like-minded individuals, natural-born pessimists, who want to radically embrace positivity.</p>
      </div>

          <form action="/login" method="POST">
            <div class="card flex-shrink-0 w-full max-w-sm shadow-2xl bg-base-100">
              <div class="card-body">

                <div class="form-control">
                  <label for="exampleInputEmail1" class="label">
                    <span class="label-text">Email</span>
                  </label>
                  <input type="text" placeholder="email" class="input input-bordered" id="exampleInputEmail1" aria-describedby="emailHelp" name="email"/>
                </div>

                <div class="form-control">
                  <label for="exampleInputPassword1" class="label">
                    <span class="label-text">Password</span>
                  </label>
                  <input type="password" id="exampleInputPassword1" name="password" placeholder="password" class="input input-bordered" />

                  <!-- Create a forgot password page -->
                  <label class="label">
                    <a href="#" class="label-text-alt link link-hover">Forgot password?</a>
                  </label>
                </div>

                <div class="form-control mt-6">
                  <button class="btn btn-active btn-primary" type="submit">Login</button>
                </div>
              </div>
            </div>
          </form>
    </div>
  </div>
</main>

<%- include('partials/footer') -%>
